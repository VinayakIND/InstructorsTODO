<% include partials/header %>

<style scoped>
    form {
        border: 0px solid black;
        width: 600px;
        margin: 0;
        padding: 100px;
        color: white; 
    } 
    h1 {
        color: white;
        }
    p {
            color: white;
    }
    div{
        color: white;
    }
    buttton{
       color: black;
    }
    </style>
    <% if (messages.length > 0) { %>
        <div class="row flex-spaces">
            <div class="alert alert-danger">
                <%= messages.toString() %>
            </div>
        </div>
        <% } else { %>
            <div class="row flex-spaces">
                <div class="alert alert-secondary">
                    Please enter your credentials
                </div>
            </div>
            <% } %>
                <h1>
                    <%= title %>
                </h1>
                <div class="row flex-center">
                    <div class="sm-4 col">
                        <div class="card" style="width: 20rem;">
                            <div class="card-body">
                                <form method="POST">
                                    <div class="form-group">
                                        <label for="username">Email</label>
                                        <input type="email" id="username" name="username" class="input-block" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" id="password" name="password" class="input-block" required>
                                    </div>
                                    <a href="/google">
                                        <img src="./images/google.png" alt="Sign in with Google" style="border-radius: 10px; margin: 0 auto; padding: 1rem">
                                    </a>
                                    <button type="submit" class="btn-primary btn-block"> Login to my Account â†’</button>
                                    
                                </form>
                            </div>
                            <div class="card-footer">Need access?
                                <a href="/register">Register</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% include partials/footer %>